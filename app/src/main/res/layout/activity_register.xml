<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:id="@+id/submit_an_ad_linear_layout"
            android:backgroundTint="#373e36">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_frame"
                >
            </FrameLayout>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/submit_an_ad_cardview_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingBottom="100dp"
                cardView:cardCornerRadius="0dp"
                cardView:cardElevation="2dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            >

                            <EditText
                                android:hint="Name"
                                android:textSize="22dp"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:inputType="textPersonName"
                                android:id="@+id/name_register"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">
                            <EditText
                                android:hint="Phone"
                                android:textSize="22dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:inputType="phone"
                                android:id="@+id/phone_register"></EditText>

                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">
                            <EditText
                                android:hint="City"
                                android:textSize="22dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:inputType="text"
                                android:id="@+id/city_register"/>

                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <EditText
                                android:hint="Number of Previous Pregnancies"
                                android:textSize="22dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="25"
                                android:inputType="number"
                                android:id="@+id/nopp_register"/>

                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <EditText
                                android:hint="Number of Miscarriages"
                                android:textSize="22dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="25"
                                android:inputType="number"
                                android:id="@+id/nom_register"/>

                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <EditText
                                android:hint="Genetic Diseases"
                                android:textSize="22dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="25"
                                android:inputType="text"
                                android:id="@+id/genetic_register"/>

                        </android.support.design.widget.TextInputLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"><android.support.design.widget.TextInputLayout
                            android:orientation="vertical"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <EditText
                                android:hint="Date of Conception"
                                android:textSize="22dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="25"
                                android:inputType="date"
                                android:id="@+id/doctor_register"/>


                        </android.support.design.widget.TextInputLayout>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/calender"
                            android:background="@android:drawable/ic_menu_my_calendar"/>Button
                        </LinearLayout>
                        <Button
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:id="@+id/submit_btn"
                            android:text="Submit"
                            android:textSize="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"

                            />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
